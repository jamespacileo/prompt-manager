{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/.pnpm/@types",
      "node_modules/@types"
    ],
    "types": ["jest"],
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
